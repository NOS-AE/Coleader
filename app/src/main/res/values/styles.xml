<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>

    <style name="EditInfoTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MessageActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/messageWindowColor</item>
    </style>

    <!--Styles-->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:titleTextColor">@color/lightBlack</item>
        <item name="theme">@style/ToolbarAppearance</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarAppearance" parent="AppTheme">
        <item name="android:textColorSecondary">@color/lightBlack</item>
    </style>

    <style name="OutlineBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>
    
</resources>
